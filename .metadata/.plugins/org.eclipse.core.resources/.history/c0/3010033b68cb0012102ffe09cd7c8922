SYNTAXDEF c2
FOR <http://www.utwente.nl/apc/Code2D>
START Game,Player,NPC,Item

TOKENS {
	DEFINE COMMENT $'//'(~('\n'|'\r'|'\uffff'))*$;
	DEFINE INTEGER $('-')?('1'..'9')('0'..'9')*|'0'$;
	DEFINE FLOAT $('-')?(('1'..'9') ('0'..'9')* | '0') '.' ('0'..'9')+ $;
}


TOKENSTYLES {
	"Game" COLOR #7F0055, BOLD;
	"World" COLOR #7F0055, BOLD;
	"Player" COLOR #7F0055, BOLD;
	"NPC" COLOR #7F0055, BOLD;
	"Item" COLOR #7F0055, BOLD;
}

RULES {
	Game ::= "Game" #0 Name[] #0 "{" GameWorld GameObjects "}";
	World ::= "World" #0 "{" #0 "Name" #0 ":" Name[] ";" #0 "}";
	Player ::= "Player" "{" (("Name:" Name[]";") | ("Texture:" Texture[]";"))1 "}";
	NPC ::= "NPC" (Name['"','"'] | Texture['"','"'] | Behaviour[Friendly:"Friendly", Neutral:"Neutral", Hostile:"Hostile"])* ";";
	Item ::= "Item" (Name['"','"'] | Texture['"','"'])* ";";
}